@model PekaraKonjic.Models.Proizvod

@{
    ViewData["Title"] = "Delete";
}

<h3>Da li ste sigurni da zelite izbrisati ovaj proizvod?</h3>
<hr />
<div>
    <hr />
    <dl class="row" style="background-color:lightcyan; border-radius:10px; padding:10px">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Naziv)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Naziv)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cijena)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cijena)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Opis)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Opis)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NaStanju)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NaStanju)
        </dd>
        
    </dl>
    <hr />
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProizvodID" />
        <input type="submit" value="Izbrisi" class="btn btn-outline-danger" /> |
        <a asp-action="Index" class="btn btn-outline-success">Nazad</a>
    </form>
</div>
