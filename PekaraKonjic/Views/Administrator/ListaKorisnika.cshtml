@model IEnumerable<Kupac>

@{ 
    ViewBag.Title = "Svi korisnici";
}

<h2>Svi korisnici</h2>

@if (Model.Any())
{
    <a class="btn btn-primary" style="width:auto" asp-area="Identity" asp-page="/Account/Register">Dodaj novog korisnika</a>
    <hr />
    foreach (var korisnik in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Uloga ID : @korisnik.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@korisnik.UserName</h5>
            </div>
            <div class="card-footer">
                <form asp-action="IzbrisiKorisnika" asp-route-id="@korisnik.Id" method="post">
                <a asp-action="UrediKorisnika" asp-controller="Administrator"
            asp-route-id="@korisnik.Id" class="btn btn-primary">Uredi</a>
              <button type="submit" class="btn btn-danger" 
                      onclick="return confirm('Da li ste sigurni da želite izbrisati korisnika: @korisnik.UserName')"> Izbrisi</button>
                    </form>
            </div>
        </div>
    }
}
else
{
     <div class="card">
            <div class="card-header">
                Nema korisnika
            </div>
            <div class="card-body">
                <h5 class="card-title">Kreirajte novog korisnika klikom na dugme</h5>
            </div>
         <a class="btn btn-primary" style="width:auto" asp-area="Identity" asp-page="/Account/Register">Dodaj novog korisnika</a>
     </div>
}