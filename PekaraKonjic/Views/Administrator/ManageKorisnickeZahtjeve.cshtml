@model KorisnickiZahtjevVM

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Upravljaj korisničkim zahtjevima</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Cliams.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Cliams[i].TipZahtjeva" />
                    <input asp-for="@Model.Cliams[i].Oznacen" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.Cliams[i].Oznacen">
                        @Model.Cliams[i].TipZahtjeva
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Spremi" class="btn btn-primary"
                   style="width:auto" />
            <a asp-action="UrediKorisnika" asp-route-id="@Model.KorisnikId"
               class="btn btn-primary" style="width:auto">Nazad</a>
        </div>
    </div>
</form>