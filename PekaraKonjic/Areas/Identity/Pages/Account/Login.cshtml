@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

    <head>
        <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

        <link href="https://fonts.googleapis.com/css?family=Merriweather+Sans:400,700" rel="stylesheet">
        <link href='https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic' rel='stylesheet' type='text/css'>

        <link rel="stylesheet" href="~/css/creative.min.css" type="text/css">
        <link rel="stylesheet" href="~/css/moj.css" type="text/css">
        <link rel="stylesheet" href="~/css/login.css" type="text/css">
        <link rel="stylesheet" href="~/css/register.css" type="text/css">


        <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">


        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css">


        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>

    </head>
<body style="background: linear-gradient(to bottom, rgba(52, 37, 36, 0.1) 0%, rgba(52, 37, 36, 0.8) 50%)">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light fixed-top py-2" id="mainNav">
            <div class="container">
                <a class="navbar-brand js-scroll-trigger" asp-action="Index" asp-controller="Home">Pekara Konjic</a>
                <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                &nbsp;

                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto my-2 my-lg-0">
                        <partial name="_LoginPartial" />
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" asp-controller="Home" asp-action="Index">Usluge</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" asp-action="Index" asp-controller="Proizvod">Proizvodi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" asp-controller="Home" asp-action="Index">Kontakt</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Prijavite se</h3>
                    <div class="d-flex justify-content-end social_icon">
                        <span><i class="fab fa-facebook-square"></i></span>
                        <span><i class="fab fa-google-plus-square"></i></span>
                        <span><i class="fab fa-twitter-square"></i></span>
                    </div>
                </div>
                <div class="card-body">
                    <form id="account" method="post">
                        <h4 style="color:white">Koristite vlastiti račun za prijavu.</h4>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email" style="color:white">E-Mail</label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password" style="color:white">Lozinka</label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe" style="color:white">
                                    <input asp-for="Input.RememberMe" />
                                    Zapamti
                                </label>
                                <button style="float:right; color:white" type="submit" class="btn btn-default">Prijavi se</button>
                            </div>
                        </div>
                        <hr />
                        <div class="form-group">
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Zaboravili ste šifru?</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registruj se</a>
                            </p>
                            <p>
                                <button type="submit" asp-page-handler="SendVerificationEmail" class="btn-link" style="padding:0px;margin:0px;border:0px">Pošalji e-mail potvrdu</button>
                            </p>
                        </div>
                    </form>
                    <div class="card-footer">
                        <p style="color:white">
                            Nemate račun?   - 
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrujte se sada</a>
                        </p>
                    </div>
                </div>                
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
